{
  "app-id": "com.ekonomikas.merkato",
  "runtime": "org.gnome.Platform",
  "runtime-version": "47",
  "sdk": "org.gnome.Sdk",
  "command": "merkato",
  "build-options": {
    "strip": true,
    "no-debuginfo": true
  },
  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri"
  ],
  "cleanup": [
    "/include",
    "/lib/pkgconfig",
    "/man",
    "/share/doc",
    "/share/gtk-doc",
    "/share/man",
    "/share/pkgconfig",
    "*.la",
    "*.a"
  ],
  "modules": [
    {
      "name": "blueprint-compiler",
      "buildsystem": "meson",
      "cleanup": ["*"],
      "sources": [
        {
          "type": "git",
          "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler.git",
          "tag": "v0.14.0"
        }
      ]
    },
    {
      "name": "com.ekonomikas.merkato",
      "builddir": true,
      "buildsystem": "meson",
      "config-opts": ["--libdir=lib"],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/sheep-farm/merkato.git",
          "commit": ""
        }
      ]
    }
  ]
}