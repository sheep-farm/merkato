{
    "id" : "com.github.sheepfarm.merkato",
    "runtime" : "org.gnome.Sdk",
    "runtime-version" : "47",
    "sdk" : "org.gnome.Sdk",
    "command" : "merkato",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--filesystem=xdg-config/environment.d:ro"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
	  "name": "python-dependencies",
	  "buildsystem": "simple",
	  "build-options": {
	    "build-args": [
	      "--share=network"
	    ]
	  },
	  "build-commands": [
	    "pip3 install --prefix=/app --no-cache-dir pandas",
	    "pip3 install --prefix=/app --no-cache-dir requests",
	    "pip3 install --prefix=/app --no-cache-dir requests-futures",
	    "pip3 install --prefix=/app --no-cache-dir yahooquery"
	  ]
	},
        {
            "name" : "blueprint-compiler",
            "buildsystem" : "meson",
            "cleanup" : [
                "*"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/jwestman/blueprint-compiler.git",
                    "tag" : "v0.14.0"
                }
            ]
        },
        {
            "name" : "com.ekonomikas.merkato",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/sheep-farm/merkato.git",
                    "commit" : ""
                }
            ],
            "config-opts" : [
                "--libdir=lib"
            ]
        }
    ],
    "build-options" : {
        "env" : {        }
    }
}
